<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/portrait_screen_worker_detail"
    tools:context=".screens.worker.WorkerDetailActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="205dp"
        android:alpha="0.45"
        android:scaleType="center"
        android:src="@drawable/portrait_screen_worker_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/services"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/portrait_screen_worker_detail" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="4dp"
        android:text="@string/name"
        android:textColor="@color/cardview_dark_background"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/services" />

    <RatingBar
        android:id="@+id/rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="80dp"
        android:layout_height="16dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:isIndicator="true"
        android:numStars="5"
        android:progressBackgroundTint="@color/gold"
        android:progressTint="@color/gold"
        android:stepSize="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="4dp"
        android:text="@string/price"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:text="@string/surname"
        android:textColor="@color/cardview_dark_background"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/name"
        app:layout_constraintTop_toBottomOf="@+id/services" />


    <TextView
        android:id="@+id/services"
        android:layout_width="258dp"
        android:layout_height="34dp"
        android:layout_marginTop="20dp"
        android:text="@string/services"
        android:textAlignment="center"
        android:textColor="@color/material_on_background_emphasis_high_type"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comments2" />

    <TextView
        android:id="@+id/comments"
        android:layout_width="369dp"
        android:layout_height="32dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="16dp"
        android:text="@string/comments"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/comments2"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/worker_detail_recycler_view"
        android:layout_width="397dp"
        android:layout_height="137dp"
        android:layout_marginStart="308dp"
        android:layout_marginTop="8dp"
        android:background="@color/material_on_primary_disabled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comments" />

    <TextView
        android:id="@+id/new_comment_title"
        android:layout_width="369dp"
        android:layout_height="32dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="4dp"
        android:text="@string/new_comment"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/previuslyHireTextView"
        app:layout_constraintTop_toBottomOf="@+id/worker_detail_recycler_view" />

    <TextView
        android:id="@+id/previuslyHireTextView"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="@color/cardview_shadow_start_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating" />

    <Button
        android:id="@+id/hire_button"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="146dp"
        android:layout_height="38dp"
        android:layout_marginStart="44dp"
        android:text="@string/hire"
        android:textColor="@color/white"
        app:iconTint="@color/gold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previuslyHireTextView" />

    <TextView
        android:id="@+id/comments2"
        android:layout_width="226dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:text="@string/worker_details"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/workerCommentTextView"
        android:layout_width="224dp"
        android:layout_height="42dp"
        android:layout_marginStart="120dp"
        android:hint="@string/hint_comment"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/previuslyHireTextView"
        app:layout_constraintTop_toBottomOf="@+id/workerCommentRatingBar" />

    <Button
        android:id="@+id/worker_comment_button"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="116dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:onClick="onclickComment"
        android:text="@string/comment"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/workerCommentTextView"
        app:layout_constraintTop_toBottomOf="@+id/new_comment_title" />

    <RatingBar
        android:id="@+id/workerCommentRatingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="120dp"
        android:isIndicator="false"
        android:numStars="5"
        android:progressBackgroundTint="@color/gold"
        android:progressTint="@color/gold"
        android:stepSize="0.1"
        app:layout_constraintStart_toEndOf="@+id/hire_button"
        app:layout_constraintTop_toBottomOf="@+id/new_comment_title" />


</androidx.constraintlayout.widget.ConstraintLayout>